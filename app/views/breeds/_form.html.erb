<%= simple_form_for @breed, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.label :type %>
  <%= collection_select(:breed, :type_id, Type.all, :id, :name) %>
  <br><br>
  <%= f.input :name %>
  <%#= f.input :type_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                breeds_path, :class => 'btn' %>
  </div>
<% end %>
