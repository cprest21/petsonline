<%- model_class = PetsLoss -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:loss_history_no) %></th>
      <th><%= model_class.human_attribute_name(:pet_id) %></th>
      <th><%= model_class.human_attribute_name(:loss_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pets_losses.each do |pets_loss| %>
      <tr>
        <td><%= link_to pets_loss.id, pets_loss_path(pets_loss) %></td>
        <td><%= pets_loss.loss_history_no %></td>
        <td><%= pets_loss.pet_id %></td>
        <td><%= pets_loss.loss_id %></td>
        <td><%=l pets_loss.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pets_loss_path(pets_loss), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pets_loss_path(pets_loss),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pets_loss_path,
            :class => 'btn btn-primary' %>
