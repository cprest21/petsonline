<%= simple_form_for @pet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%#= f.input :owner_id %>
  <%= f.input :type_id %>
  <%= f.input :breed_id %>
  <%= f.input :birth_date %>
  <%= f.input :colour %>
  <%= f.input :sex %>
  <%= f.input :sterilized %>
  <%= f.input :available_to_breed %>
  <%= f.input :deceased %>
  <%= f.input :death_date %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pets_path, :class => 'btn' %>
  </div>
<% end %>
