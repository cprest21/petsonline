<%- model_class = Veterinarian -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @veterinarian.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @veterinarian.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @veterinarian.city.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @veterinarian.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street_no) %>:</strong></dt>
  <dd><%= @veterinarian.street_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:building) %>:</strong></dt>
  <dd><%= @veterinarian.building %></dd>
  <dt><strong><%= model_class.human_attribute_name(:office_no) %>:</strong></dt>
  <dd><%= @veterinarian.office_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @veterinarian.telephone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              veterinarians_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_veterinarian_path(@veterinarian), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              veterinarian_path(@veterinarian),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
