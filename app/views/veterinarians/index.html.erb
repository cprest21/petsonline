<%- model_class = Veterinarian -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <!--<th><%#= model_class.human_attribute_name(:address_id) %></th>-->
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <!--<th><%#= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @veterinarians.each do |veterinarian| %>
      <tr>
        <td><%= link_to veterinarian.id, veterinarian_path(veterinarian) %></td>
        <!--<td><%#= veterinarian.address_id %></td>-->
        <td><%= veterinarian.name %></td>
        <td><%= veterinarian.lastname %></td>
        <!--<td><%#=l veterinarian.created_at %></td>-->
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      veterinarian_path(veterinarian), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_veterinarian_path(veterinarian), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      veterinarian_path(veterinarian),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_veterinarian_path,
            :class => 'btn btn-primary' %>
