<%= simple_form_for @province, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="field">
    <%= f.label :country_id %><br>
   <%= collection_select(:province, :country_id, Country.all, :id, :name) %>
  </div>
  <%= f.input :name %>
  <%#= f.input :country_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                provinces_path, :class => 'btn' %>
  </div>
<% end %>
