<%- model_class = Treatment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= "Pet" %>:</strong></dt>
  <dd><%= @treatment.pets.first.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:veterinarian_id) %>:</strong></dt>
  <dd><%= @treatment.veterinarian.name_with_lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:treatment_date) %>:</strong></dt>
  <dd><%= @treatment.treatment_date %></dd>
  <dt><strong><%= "Treatment type" %>:</strong></dt>
  <dd><%if @treatment.vaccination? %><%= "Vaccination" %><% elsif @treatment.deworming? %><%= "Deworming" %><% elsif @treatment.operation? %><%= "Operation" %><% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @treatment.details %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              treatments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_treatment_path(@treatment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              treatment_path(@treatment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
