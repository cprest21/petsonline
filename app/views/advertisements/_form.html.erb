<%= simple_form_for @advertisement, :html => { :class => 'form-horizontal' } do |f| %>
  <%#= f.input :user_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.input :details %>
  <%#= f.hidden_field :placement_date, :value => params[:created_at] %>
  <%#= f.input :placement_date %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                advertisements_path, :class => 'btn' %>
  </div>
<% end %>
